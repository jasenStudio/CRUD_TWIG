{% extends "layouts/layout.html.twig" %}

{% block title %}Editar usuario {% endblock %}

{% block content %}
    <h2 class="fs-4 my-4">Editar Usuario</h2>
    <form action="index.php?action=edit&id={{ data.id }}" method="post">
        <div class="mb-3">
        <label class="form-label" for="name">Nombre:</label>
        <input class="form-control" type="text" id="name" name="name" value="{{ data.name }}" required>
        <button class="btn btn-primary my-2" type="submit">Actualizar</button>
        <button class="btn btn-danger my-2 mx-4" type="submit">Cancelar</button>
        </div>
      
    </form>
{% endblock %}

